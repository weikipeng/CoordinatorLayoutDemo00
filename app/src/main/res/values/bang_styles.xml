<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 4.0.2 统一样式-->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.T2">
        <item name="android:textColor">@color/text_C2</item>
        <item name="android:textSize">@dimen/text_T2</item>
    </style>

    <style name="TextView.T2.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextView.T6">
        <item name="android:textColor">@color/text_C6</item>
        <item name="android:textSize">@dimen/text_T6</item>
    </style>


    <style name="TextView.T6.White">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>